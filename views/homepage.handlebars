
 {{#each blog}}

 <a href='/blog/{{this.id}}'>
<div class="container mx-auto m-2 p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
    <a class="flex justify-between" href="/blog/{{this.id}}">
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{this.title}}</h5>
        <p class="mb-2 tracking-tight text-gray-900 dark:text-white">Date Created: {{format_date this.date_created}}</p>
    </a>
</div>
</a>
{{/each}}
